<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_company_form" model="ir.ui.view">
            <field name="name">res.company.form</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Navbar" name="navbar" groups="base.group_system">
                        <group string="Navbar Colors" name="navbar_colors">
                            <field name="navbar_chameleon_mode" />
                            <field name="navbar_color_background" widget="color" />
                            <field name="navbar_color_text" widget="color" />
                            <field name="navbar_color_text_hover" widget="color" />
                            <field name="navbar_color_text_active" widget="color" />
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

    </data>
</odoo>
